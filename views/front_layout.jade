doctype html
html
  head
    block meta
    meta(charset='uft-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='keywords', content='domain, meepShop, url, 網域')

    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/bootstrap1.css')
    link(rel='stylesheet', href='/css/foundation.min.css')
    link(rel='stylesheet', href='/css/front-nav.css')
    link(rel='stylesheet', href='/css/style.css')

    block style

    script(type='text/javascript', src='/js/main/jquery.js')
    script(type='text/javascript', src='/js/main/jquery.validate.js')
    script(type='text/javascript', src='/js/main/jquery.serializeObject.js')
    script(type='text/javascript', src='/js/main/waypoints.min.js')

  body
    .container
      header#header
        h1#logo
          a(href='https://www.meepshop.com') 踹講 TryTalk
        nav#nav
          ul
            li
              a(href='/domain#main') 搜尋
            li
              a(href='/domain#talks') 講座
            li
              a(href='/domain#faq') 問題
            li
              a(href='/domain#pricing') 價錢

            - if (!user)
              li
                a(href='/domain#login') 登入管理
              li
                a(href='/domain#signup') 註冊
            - else
              li
                p=user.email
              li
                a(href='/logout') 登出
    section#main
    .row
      header
        h1 Find a talk and vote for it!
        h4 快速查詢講座

      .column.medium-8.small-10.small-centered
        form#subForm.sign-up-form.clearfix
          input#domain(type='text', name='domain', placeholder='欲查詢的講座', tabindex='1', autofocus='autofocus')
          input#search.button.radius(type='button', value='SEARCH', tabindex='3')
    section#talks
    .row
      header
        h1 Create your own talks
        h4 想聽誰的講座？